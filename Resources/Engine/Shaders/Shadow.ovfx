#shader vertex
#version 430 core

layout (location = 0) in vec3 geo_Pos;

uniform mat4 _LightSpaceMatrix;
uniform mat4 _ModelMatrix;

void main()
{
    gl_Position = _LightSpaceMatrix * _ModelMatrix * vec4(geo_Pos, 1.0);
}

#shader fragment
#version 430 core

void main()
{
    gl_FragDepth = gl_FragCoord.z;
}
